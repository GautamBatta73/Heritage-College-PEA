@{
    ViewData["Title"] = "Home Page";
    TempData["OrderPlaced"] = TempData["OrderPlaced"] ?? false;
}

@if ((bool)TempData["OrderPlaced"]) {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Success!</strong> Your order has been placed and will arrive in 5 days.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="homePage text-center">
        <h1>Welcome to Batcave Collectibles</h1>
        <h3>Your one-stop shop for all things Batman!</h3>
        <a asp-controller="Products" asp-action="Index" class="btn">Shop Now</a>
    </div>
</div>
