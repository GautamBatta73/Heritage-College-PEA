@model IEnumerable<gbH60Customer.Model.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Product Categories</h1>

<section id="search">
    <form asp-action="Index">
        <input type="search" name="name" value="@(ViewData["name"] ?? "")" />
        <button type="submit">⌕</button>
    </form>
</section>

@if (Model.Count() > 0) {
<table>
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ProdCat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                        <img alt="@item.ProdCat Image" src="@(item.ImageURL ?? Url.Content("~/images/no_image.png"))" onerror="this.src='/images/no_image.png';this.onerror='';" loading="lazy" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProdCat)
                </td>
                <td id="prodCatBtns">
                    <a class="btn" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                </td>
            </tr>
        }
    </tbody>
    </table>
} else
{
    <section class="prodCatSection">
        <h3>None Found!</h3>
    </section>
}
