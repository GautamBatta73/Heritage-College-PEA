@using gbH60Customer.Model;
@model gbH60Customer.DTO.ProductDTO;

@{
    ViewData["Title"] = "Details";
    ViewData["CustId"] = ViewData["CustId"] ?? 0;
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manufacturer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manufacturer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => (new ProductCategory()).ProdCat)
        </dt>
        <dd class = "col-sm-10">
            @(ViewData["Category"] ?? "No Category")
        </dd>
    </dl>
</div>
<div>
    <a class="btn" asp-action="Index">Back to List</a>
    <button class="btn" onclick="localStorage.setItem('isAnimation', 'true');addToCart(@ViewData["CustId"], @Model.ProductId)" @(Model.Stock < 1 ? "disabled" : "")>
        Add to Cart
    </button>
</div>
