@model IEnumerable<gbH60A02.Model.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Product Categories</h1>

<p>
    <a class="btn" asp-action="Create">Create New</a>
</p>
<table>
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.ProdCat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <img alt="@item.ProdCat Image" src="@(item.ImageURL ?? Url.Content("~/images/no_image.png"))" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdCat)
            </td>
            <td id="prodCatBtns">
                    <a class="btn" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a class="btn" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a class="btn" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
