@using gbH60A02.Model;
@model gbH60A02.Model.ProductCategory

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ProductCategory</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdCat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdCat)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="deleteBtn" /> |
        <a class="btn" asp-action="Index">Back to List</a>
    </form>

    <dialog>
        <div>
            <h3>Warning</h3>
            <button>
                &nbsp;&times;&nbsp;
            </button>
        </div>
        <div>
            <p>This Category has the following product assiciated with it:</p>
            <ul>
                @if (ViewData["Products"] != null)
                {
                    @foreach (var prod in (IEnumerable<Product>)ViewData["Products"])
                    {
                        <li>@prod.Name</li>
                    }
                }
            </ul>
            <p>Delete the products first before deleting the category.</p>
        </div>
    </dialog>
</div>

<script>
    let dialog = document.querySelector("dialog");
    let btn = document.querySelector("dialog button");

    btn.addEventListener('click', () => {
        dialog.close();
    });

    dialog.addEventListener('close', () => {
        location.href = '/ProductCategories';
    });

    if (("@ViewData["FKError"]").toLowerCase() == "true") {
        dialog.showModal();
    }
</script>